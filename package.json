{
  "name": "auq-mcp-server",
  "version": "1.3.1",
  "main": "dist/index.js",
  "bin": {
    "auq": "dist/bin/auq.js"
  },
  "files": [
    "dist",
    "scripts/postinstall.cjs",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "packages/opencode-plugin"
  ],
  "scripts": {
    "build": "npm run sync-schemas && tsc",
    "prepare": "npm run build",
    "postinstall": "node scripts/postinstall.cjs",
    "deploy": "node scripts/deploy.mjs",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "server": "node dist/src/server.js",
    "start": "tsx src/server.ts",
    "dev": "fastmcp dev src/server.ts",
    "lint": "prettier --check . && eslint . && tsc --noEmit",
    "sync-schemas": "node scripts/sync-schemas.mjs",
    "test": "vitest run",
    "format": "prettier --write . && eslint --fix ."
  },
  "keywords": [
    "fastmcp",
    "mcp",
    "ask-user-questions",
    "tui",
    "terminal"
  ],
  "repository": {
    "url": "git+https://github.com/paulp-o/ask-user-questions-mcp.git"
  },
  "author": "Paul Park",
  "homepage": "https://github.com/paulp-o/ask-user-questions-mcp",
  "type": "module",
  "license": "MIT",
  "description": "An MCP server that provides a tool to ask a user questions via the terminal",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@modelcontextprotocol/sdk": "1.17.2",
    "@types/uuid": "^10.0.0",
    "chalk": "^5.6.2",
    "fastmcp": "^3.23.0",
    "gradient-string": "^3.0.0",
    "ink": "^6.4.0",
    "ink-gradient": "^3.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "release": {
    "branches": [
      "main",
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@semantic-release/changelog": "^6.0.3",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.13.0",
    "@types/react": "^19.2.2",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-perfectionist": "^4.12.3",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.3"
  }
}
